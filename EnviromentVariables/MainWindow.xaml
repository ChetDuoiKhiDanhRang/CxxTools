<Window x:Class="EnviromentVariables.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnviromentVariables"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        FontFamily="Bahnschrift SemiLight"
        >
    <Window.Resources>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderBrush" Value="#222222"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!--Hide the row header-->
        <Style TargetType="DataGridRowHeader">
            <Setter Property="Width" Value="0"/>
        </Style>

        <!--Hide the row's border and trans[arent background, use GridLine of DataGrid-->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#0000"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"
            />
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="#005A9E"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>


        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#00000000"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Border
            CornerRadius="5"
            Margin="10"
            BorderThickness="0"
            >
            <Border.Background>
                <RadialGradientBrush 
                    GradientOrigin="0,0" 
                    >
                    <GradientStop Color="#A9FDEE" Offset="0"/>
                    <GradientStop Color="#AA139663" Offset="1"/>
                </RadialGradientBrush>
            </Border.Background>
            <DataGrid 
                x:Name="datagrid"
                IsReadOnly="True"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                GridLinesVisibility="Horizontal"
                HorizontalGridLinesBrush="#222222"
                AutoGenerateColumns="False"
                SelectionMode="Extended" AlternationCount="1"
                >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Key}">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                <Setter Property="TextBlock.Background" Value="#0000"/>
                                <Setter Property="TextBlock.Padding" Value="3"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Width="*" Header="Value" Binding="{Binding Value}">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                <Setter Property="TextBlock.Background" Value="#0000"/>
                                <Setter Property="TextBlock.Padding" Value="3"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Border>
    </Grid>
</Window>
