    </Window.Resources>
    <Grid>
        <Border
            CornerRadius="5"
            Margin="10"
            BorderThickness="0"
            >
            <Border.Background>
                <RadialGradientBrush 
                    GradientOrigin="0,0" 
                    >
                    <GradientStop Color="#A9FDEE" Offset="0"/>
                    <GradientStop Color="#AA139663" Offset="1"/>
                </RadialGradientBrush>
            </Border.Background>
            <ListView 
                x:Name="dataView"
                Background="#0000"
                BorderThickness="0"
                Margin="5"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                SelectionMode="Extended" AlternationCount="1"
                >
                <ListView.View>
                    <GridView>
                        <GridView.Columns>
                            <GridViewColumn Header="Name" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Background="#0000"
                                            Margin="2,3,2,3" 
                                            HorizontalAlignment="Stretch"
                                            TextWrapping="Wrap" 
                                            Text="{Binding Name}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Value">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Background="#0000"
                                            Margin="2,3,2,3" 
                                            HorizontalAlignment="Stretch"
                                            TextWrapping="Wrap" 
                                            Text="{Binding Content}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>

                <!--<ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>-->
                
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="GroupItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate>
                                            <Expander>
                                                <Expander.Header>
                                                    <StackPanel 
                                                        Margin="2"
                                                        Orientation="Horizontal">
                                                        <Label 
                                                            FontWeight="Medium"
                                                            Foreground="DarkRed"
                                                            Margin="3,2,3,2"
                                                            Content="{Binding BindingGroupName=EnvType}"/>
                                                        <Label
                                                            FontWeight="Medium"
                                                            Margin="3,2,3,2"
                                                            Content="{Binding ItemCount}"/>
                                                    </StackPanel>
                                                </Expander.Header>
                                                <ItemsPresenter/>
                                            </Expander>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>

                    </GroupStyle>
                </ListView.GroupStyle>
            </ListView>

        </Border>
    </Grid>
</Window>
